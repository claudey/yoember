<h1>Contact</h1>

<form class="col-sm-8">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    {{input type="email" class="form-control" value=emailAddress placeholder="Email"}}
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Text Message</label>
    {{textarea class="form-control" value=textMessage placeholder="Your message. (At least 7 characters)"}}
  </div>
  <button type="submit" class="btn btn-default" disabled={{unless isValid 'disabled'}} {{action 'buttonAlert'}}>Send Message</button>
  
  <br/>
  {{#if responseMessage}}
    <br/>
    <div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}
</form>